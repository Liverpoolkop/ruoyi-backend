<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.edu.mapper.CourseExamQuestionMapper">
    
    <resultMap type="CourseExamQuestion" id="CourseExamQuestionResult">
        <result property="id"    column="id"    />
        <result property="examId"    column="exam_id"    />
        <result property="questionId"    column="question_id"    />
        <result property="score"    column="score"    />
        <result property="sortOrder"    column="sort_order"    />
        <result property="content"    column="content"    />
        <result property="type"    column="type"    />
    </resultMap>

    <select id="selectByExamId" parameterType="Long" resultMap="CourseExamQuestionResult">
        SELECT 
            eq.id, 
            eq.exam_id, 
            eq.question_id, 
            eq.score, 
            eq.sort_order,
            q.content, 
            q.type
        FROM edu_course_exam_question eq
        LEFT JOIN edu_question q ON eq.question_id = q.id
        WHERE eq.exam_id = #{examId}
        ORDER BY eq.sort_order ASC, eq.id ASC
    </select>
        
    <insert id="insertCourseExamQuestion" parameterType="CourseExamQuestion" useGeneratedKeys="true" keyProperty="id">
        insert into edu_course_exam_question
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="examId != null">exam_id,</if>
            <if test="questionId != null">question_id,</if>
            <if test="score != null">score,</if>
            <if test="sortOrder != null">sort_order,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="examId != null">#{examId},</if>
            <if test="questionId != null">#{questionId},</if>
            <if test="score != null">#{score},</if>
            <if test="sortOrder != null">#{sortOrder},</if>
         </trim>
    </insert>

    <delete id="deleteByExamId" parameterType="Long">
        delete from edu_course_exam_question where exam_id = #{examId}
    </delete>
</mapper>