<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.EduChapterMapper">
    
    <resultMap type="com.ruoyi.system.domain.EduChapter" id="EduChapterResult">
        <result property="chapterId"    column="chapter_id"    />
        <result property="courseId"    column="course_id"    />
        <result property="parentId"    column="parent_id"    />
        <result property="chapterName"    column="chapter_name"    />
        <result property="sort"    column="sort"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectEduChapterVo">
        select chapter_id, course_id, parent_id, chapter_name, sort, create_time, update_time from edu_chapter
    </sql>

    <select id="selectEduChapterList" parameterType="com.ruoyi.system.domain.EduChapter" resultMap="EduChapterResult">
        <include refid="selectEduChapterVo"/>
        <where>  
            <if test="courseId != null "> and course_id = #{courseId}</if>
            <if test="parentId != null "> and parent_id = #{parentId}</if>
            <if test="chapterName != null  and chapterName != ''"> and chapter_name like concat('%', #{chapterName}, '%')</if>
        </where>
        order by sort, create_time
    </select>
    
    <select id="selectEduChapterByChapterId" parameterType="Long" resultMap="EduChapterResult">
        <include refid="selectEduChapterVo"/>
        where chapter_id = #{chapterId}
    </select>
        
    <insert id="insertEduChapter" parameterType="com.ruoyi.system.domain.EduChapter" useGeneratedKeys="true" keyProperty="chapterId">
        insert into edu_chapter
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="courseId != null">course_id,</if>
            <if test="parentId != null">parent_id,</if>
            <if test="chapterName != null and chapterName != ''">chapter_name,</if>
            <if test="sort != null">sort,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="courseId != null">#{courseId},</if>
            <if test="parentId != null">#{parentId},</if>
            <if test="chapterName != null and chapterName != ''">#{chapterName},</if>
            <if test="sort != null">#{sort},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateEduChapter" parameterType="com.ruoyi.system.domain.EduChapter">
        update edu_chapter
        <trim prefix="SET" suffixOverrides=",">
            <if test="courseId != null">course_id = #{courseId},</if>
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="chapterName != null and chapterName != ''">chapter_name = #{chapterName},</if>
            <if test="sort != null">sort = #{sort},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where chapter_id = #{chapterId}
    </update>

    <delete id="deleteEduChapterByChapterId" parameterType="Long">
        delete from edu_chapter where chapter_id = #{chapterId}
    </delete>

    <delete id="deleteEduChapterByChapterIds" parameterType="String">
        delete from edu_chapter where chapter_id in 
        <foreach item="chapterId" collection="array" open="(" separator="," close=")">
            #{chapterId}
        </foreach>
    </delete>
</mapper>
