<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.EduQuestionBankMapper">
    
    <resultMap type="EduQuestionBank" id="EduQuestionBankResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="description"    column="description"    />
        <result property="teacherId"    column="teacher_id"    />
        <result property="teacherName"    column="teacherName"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectEduQuestionBankVo">
        select b.id, b.name, b.description, b.teacher_id, b.create_by, b.create_time, b.update_by, b.update_time, b.remark, u.nick_name as teacherName 
        from edu_question_bank b
        left join sys_user u on b.teacher_id = u.user_id
    </sql>

    <select id="selectEduQuestionBankList" parameterType="EduQuestionBank" resultMap="EduQuestionBankResult">
        <include refid="selectEduQuestionBankVo"/>
        <where>  
            <if test="name != null  and name != ''"> and b.name like concat('%', #{name}, '%')</if>
            <if test="teacherId != null "> and b.teacher_id = #{teacherId}</if>
        </where>
    </select>
    
    <select id="selectEduQuestionBankById" parameterType="Long" resultMap="EduQuestionBankResult">
        <include refid="selectEduQuestionBankVo"/>
        where b.id = #{id}
    </select>
        
    <insert id="insertEduQuestionBank" parameterType="EduQuestionBank" useGeneratedKeys="true" keyProperty="id">
        insert into edu_question_bank
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            <if test="description != null">description,</if>
            <if test="teacherId != null">teacher_id,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="description != null">#{description},</if>
            <if test="teacherId != null">#{teacherId},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateEduQuestionBank" parameterType="EduQuestionBank">
        update edu_question_bank
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="description != null">description = #{description},</if>
            <if test="teacherId != null">teacher_id = #{teacherId},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteEduQuestionBankById" parameterType="Long">
        delete from edu_question_bank where id = #{id}
    </delete>

    <delete id="deleteEduQuestionBankByIds" parameterType="String">
        delete from edu_question_bank where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
